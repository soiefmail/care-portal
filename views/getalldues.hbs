<div class="container">
    <form action="/getalldues" method="post">
        <h2>Enter Dates below to see all dues amounts</h2>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>Start Date <span class="text-align-top red-color">&nbsp;*</span></label>
                <input type="date" id="startdate" name="startdate" max="3000-12-31" min="1000-01-01" class="form-control" required>
            </div>
            <div class="form-group col-md-6">
                <label>End Date <span class="text-align-top red-color">&nbsp;*</span></label>
                <input type="date" id="enddate" name="enddate" min="1000-01-01" max="3000-12-31" class="form-control" required>
            </div>
        </div>
        <div class="form-row mb-3">
            <button type="submit" class="btn btn-primary btn-lg m-auto">Get All Dues</button>
        </div>
    </form>
    <div>
        {{#if allDuesArr}}
        <div class="row font-weight-bold">
            <div class="col-2 border">Pt. Reg. Id</div>
            <div class="col-6 border">Patient Name</div>
            <div class="col-2 border">Last Updated</div>
            <div class="col-2 border">Dues Left</div>
        </div>
        {{/if}}
        {{#each allDuesArr}}
            <div class="row">
                <div class="col-2 border pt-1 pb-1">{{this.registrationid}}</div>
                <div class="col-6 border pt-1 pb-1 item">{{this.patientname}}</div>
                <div class="col-2 border pt-1 pb-1 day">{{this.dueDate}}</div>
                <div class="col-2 border pt-1 pb-1 rate">{{this.totalDue}}</div>
            </div>
        {{/each}}
    </div>
</div>